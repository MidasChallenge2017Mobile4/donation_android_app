<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp" android:id="@+id/donate_row">

    <ImageView
        android:background="#11111166"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/date"
            android:layout_gravity="right"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="날짜"
            android:textSize="100px"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textSize="80px"
                android:text="목표액"/>
            <TextView
                android:id="@+id/goal"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textSize="100px"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="130px"
                android:textColor="@color/green_normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textSize="80px"
                android:text="달성"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>