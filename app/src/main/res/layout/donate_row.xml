<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400dp" android:id="@+id/donate_row" android:background="@color/white">
    <ImageView
        android:id="@+id/row_iv"
        android:background="#11111166"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/state"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:text=" "
                android:textColor="#ff3636"
                android:textSize="25dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="2017.05.02"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="목표액"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/goal"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="100"
                android:gravity="right"
                android:textColor="@color/green_normal"
                android:textSize="25dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="달성"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>